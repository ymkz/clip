{
  "name": "clip",
  "version": "0.0.0",
  "private": true,
  "main": "./dist-api/index.js",
  "scripts": {
    "build": "node -r esbuild-register ./script/build.ts",
    "dev": "node -r esbuild-register ./script/dev.ts",
    "fmt": "npm run fmt:prettier && npm run fmt:eslint",
    "fmt:eslint": "eslint --fix .",
    "fmt:prettier": "prettier --write .",
    "lint": "npm run lint:prettier && npm run lint:eslint && npm run lint:tsc",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "lint:tsc": "tsc --noEmit",
    "reset": "rm -rf ./dist-api ./dist-view ./node_modules ./package-lock.json"
  },
  "dependencies": {
    "@cloudflare/kv-asset-handler": "0.1.3",
    "itty-router": "2.4.2",
    "node-html-parser": "4.1.4",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-query": "3.21.0"
  },
  "devDependencies": {
    "@arkweid/lefthook": "0.7.6",
    "@cloudflare/workers-types": "2.2.2",
    "@esbuild-plugins/tsconfig-paths": "0.0.4",
    "@types/react": "17.0.19",
    "@types/react-dom": "17.0.9",
    "@typescript-eslint/eslint-plugin": "4.29.3",
    "@typescript-eslint/parser": "4.29.3",
    "@vitejs/plugin-react-refresh": "1.3.6",
    "esbuild": "0.12.24",
    "esbuild-register": "3.0.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "miniflare": "1.4.0",
    "prettier": "2.3.2",
    "prettier-plugin-pkg": "0.10.0",
    "typescript": "4.4.2",
    "vite": "2.5.1",
    "vite-react-jsx": "1.1.2",
    "vite-tsconfig-paths": "3.3.13"
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "root": true,
    "overrides": [
      {
        "files": [
          "*.tsx"
        ],
        "rules": {
          "@typescript-eslint/explicit-module-boundary-types": "off"
        }
      }
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
