{
  "name": "clip",
  "version": "0.0.0",
  "private": true,
  "main": "dist-backend/index.js",
  "scripts": {
    "build": "esno bin/build.ts",
    "build:extension": "esno bin/build-extension.ts",
    "dev": "esno bin/dev.ts",
    "fmt": "npm run fmt:prettier && npm run fmt:eslint",
    "fmt:eslint": "eslint --fix .",
    "fmt:prettier": "prettier --write .",
    "lint": "npm run lint:prettier && npm run lint:eslint && npm run lint:tsc",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "lint:tsc": "tsc --noEmit",
    "reset:hard": "rm -rf dist* node_modules package-lock.json",
    "reset:soft": "rm -rf dist* node_modules",
    "test": "esno test/index.test.ts",
    "zip": "zip -r extension.zip dist-extension"
  },
  "dependencies": {
    "@cloudflare/kv-asset-handler": "0.1.3",
    "itty-router": "2.4.4",
    "node-html-parser": "5.0.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-query": "3.29.0"
  },
  "devDependencies": {
    "@types/chrome": "0.0.161",
    "@types/node": "16.11.6",
    "@types/react": "17.0.33",
    "@types/react-dom": "17.0.10",
    "@typescript-eslint/eslint-plugin": "5.2.0",
    "@typescript-eslint/parser": "5.2.0",
    "eslint": "8.1.0",
    "eslint-config-prettier": "8.3.0",
    "esno": "0.10.1",
    "miniflare": "1.4.1",
    "prettier": "2.4.1",
    "prettier-plugin-pkg": "0.10.0",
    "prettier-plugin-style-order": "0.2.2",
    "typescript": "4.4.4",
    "uvu": "0.5.2",
    "vite": "2.6.13",
    "vite-plugin-chrome-extension": "0.0.7",
    "vite-preset-react": "2.0.0",
    "vite-tsconfig-paths": "3.3.17"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "root": true
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "volta": {
    "node": "16.13.0",
    "npm": "8.1.1"
  }
}
