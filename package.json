{
  "private": true,
  "scripts": {
    "build": "run-s build:pages build:worker",
    "build:pages": "vite build",
    "build:worker": "esbuild --bundle --minify --format=esm --outfile=./dist/_worker.js ./src/worker.ts",
    "dev": "run-p dev:*",
    "dev:pages": "wrangler pages dev --port=3000 --kv=KV_CLIP_DATA -- vite dev",
    "dev:worker": "esbuild --bundle --watch --format=esm --outfile=./_worker.js ./src/worker.ts",
    "fmt": "prettier --write .",
    "lint": "tsc --noEmit && prettier --check ."
  },
  "dependencies": {
    "hono": "1.6.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "swr": "1.3.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "3.14.1",
    "@types/react": "18.0.15",
    "@types/react-dom": "18.0.6",
    "@vitejs/plugin-react": "2.0.0",
    "esbuild": "0.14.49",
    "npm-run-all": "4.1.5",
    "prettier": "2.7.1",
    "prettier-plugin-packagejson": "2.2.18",
    "typescript": "4.7.4",
    "vite": "2.9.14",
    "wrangler": "2.0.22"
  }
}
