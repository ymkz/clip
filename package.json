    "lint:tsc": "tsc --noEmit",
    "reset": "rm -rf dist-backend dist-frontend node_modules package-lock.json"
  },
  "dependencies": {
    "@cloudflare/kv-asset-handler": "0.1.3",
    "itty-router": "2.4.2",
    "node-html-parser": "4.1.4",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-query": "3.23.2"
  },
  "devDependencies": {
    "@chialab/esbuild-plugin-html": "0.11.35",
    "@cloudflare/workers-types": "2.2.2",
    "@esbuild-plugins/tsconfig-paths": "0.0.4",
    "@types/fs-extra": "9.0.12",
    "@types/node": "16.9.2",
    "@types/react": "17.0.21",
    "@types/react-dom": "17.0.9",
    "@typescript-eslint/eslint-plugin": "4.31.1",
    "@typescript-eslint/parser": "4.31.1",
    "esbuild": "0.12.28",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "esno": "0.9.1",
    "fs-extra": "10.0.0",
    "miniflare": "1.4.1",
    "prettier": "2.4.1",
    "prettier-plugin-pkg": "0.10.0",
    "typescript": "4.4.3"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "root": true
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
