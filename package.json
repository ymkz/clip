{
  "name": "clip",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "run-p dev:server dev:client",
    "dev:client": "npm run dev -w @clip/client",
    "dev:server": "npm run dev -w @clip/server",
    "dev:batch": "npm run dev -w @clip/batch",
    "dev:extension": "npm run dev -w @clip/extension",
    "build": "run-s build:common build:server build:client",
    "build:common": "npm run build -w @clip/common",
    "build:client": "npm run build -w @clip/client",
    "build:server": "npm run build -w @clip/server",
    "build:extension": "npm run build -w @clip/extension",
    "lint": "npm run lint --workspaces",
    "format": "npm run format --workspaces"
  },
  "devDependencies": {
    "@types/node": "18.15.11",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.7",
    "typescript": "5.0.3"
  }
}
