{
  "name": "clip",
  "version": "0.0.0",
  "private": true,
  "main": "dist-backend/index.js",
  "scripts": {
    "build": "esno script/build.ts",
    "build:extension": "esno script/build-extension.ts",
    "dev": "esno script/dev.ts",
    "fmt": "npm run fmt:prettier && npm run fmt:eslint",
    "fmt:eslint": "eslint --fix .",
    "fmt:prettier": "prettier --write .",
    "lint": "npm run lint:prettier && npm run lint:eslint && npm run lint:tsc",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "lint:tsc": "tsc --noEmit",
    "reset": "npm run reset:dist && npm run reset:node",
    "reset:dist": "rm -rf dist-backend dist-extension dist-frontend",
    "reset:node": "rm -rf node_modules package-lock.json",
    "zip": "zip -r extension.zip dist-extension"
  },
  "dependencies": {
    "@cloudflare/kv-asset-handler": "0.1.3",
    "itty-router": "2.4.2",
    "node-html-parser": "4.1.4",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-query": "3.23.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "2.2.2",
    "@types/chrome": "0.0.157",
    "@types/node": "16.9.2",
    "@types/react": "17.0.21",
    "@types/react-dom": "17.0.9",
    "@typescript-eslint/eslint-plugin": "4.31.1",
    "@typescript-eslint/parser": "4.31.1",
    "@vitejs/plugin-react": "1.0.1",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "esno": "0.9.1",
    "miniflare": "1.4.1",
    "prettier": "2.4.1",
    "prettier-plugin-pkg": "0.10.0",
    "typescript": "4.4.3",
    "vite": "2.5.8",
    "vite-plugin-chrome-extension": "0.0.7",
    "vite-tsconfig-paths": "3.3.14"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "root": true
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
