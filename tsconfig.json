{
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "target": "ESNext",
    "moduleResolution": "node",
    "lib": ["ESNext", "WebWorker", "DOM"],
    "types": ["@cloudflare/workers-types"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist-api", "dist-view"]
}
